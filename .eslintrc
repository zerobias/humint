{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "babel",
    "promise"
  ],
  "env": {
    "es6"   : true,
    "node"  : true
  },
  "globals": {},
  "rules": {
    "key-spacing"          : 0,
    "no-console"           : 0,
    "no-extra-semi"        : 2,
    "no-unused-vars"       : 1,
    "indent"               : [1,2,{
      "VariableDeclarator" : {
        "var": 2,
        "let": 2,
        "const": 3 },
      "FunctionDeclaration": {
        "parameters": "first"},
      "FunctionExpression": {
        "parameters": "first"},
      "MemberExpression": 1,
      "SwitchCase": 1}],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"]
  }
}
